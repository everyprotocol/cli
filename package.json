    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^13.1.0",
    "dotenv": "^16.3.1",
    "viem": "^2.7.8"
  }
}
